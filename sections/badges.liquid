<h2>{{ section.settings.heading }}</h2>
<div class="badgesContainer">
    {% for block in section.blocks %}
        <div class="images">
            <img src="{{ block.settings.image | img_url: 'master'}}" alt="">
        </div>
        <div class="images">
            <img src="{{ block.settings.image2 | img_url: 'master'}}" alt="">
        </div>
        <div class="images">
            <img src="{{ block.settings.image3 | img_url: 'master'}}" alt="">
        </div>
        <div class="images">
            <img src="{{ block.settings.image4 | img_url: 'master'}}" alt="">
        </div>
    {% endfor %}
</div>

<style>
    h2 {
        text-align: center;
    }

    .badgesContainer {
        display: flex;
        justify-content: space-around;
        margin: 5%;
    }

    .images {
        width: 200px;
        height: 200px;
    }

    .images img {
        width: 100%;
        aspect-ratio: 1/1;
        object-fit: cover;
    }

</style>

{% schema %}
    {
        "name": "Badges",
        "settings": [
            {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Custom Heading for Images"
            }
        ],
        "blocks": [
            {
                "type": "column",
                "name": "badge",
                "settings" : [
                    {
                        "type" : "image_picker",
                        "id" : "image",
                        "label": "Select an Image"
                    },
                    {
                        "type" : "image_picker",
                        "id" : "image2",
                        "label": "Select an Image"
                    },
                    {
                        "type" : "image_picker",
                        "id" : "image3",
                        "label": "Select an Image"
                    },
                    {
                        "type" : "image_picker",
                        "id" : "image4",
                        "label": "Select an Image"
                    }
                ]
            }
        ],
        "presets": [
            {
            "name":"Badges"
            }
        ]
    }

{% endschema %}